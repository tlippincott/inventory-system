{
  "name": "invoice-system",
  "version": "1.0.0",
  "description": "Personal freelance invoice management system",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "npm run dev --workspace=@invoice-system/server",
    "dev:client": "npm run dev --workspace=@invoice-system/client",
    "build": "npm run build --workspaces",
    "build:server": "npm run build --workspace=@invoice-system/server",
    "build:client": "npm run build --workspace=@invoice-system/client",
    "db:migrate": "npm run migrate --workspace=@invoice-system/server",
    "db:rollback": "npm run rollback --workspace=@invoice-system/server",
    "db:seed": "npm run seed --workspace=@invoice-system/server",
    "test": "npm run test --workspaces",
    "lint": "npm run lint --workspaces",
    "format": "prettier --write \"packages/**/*.{ts,tsx,js,jsx,json,md}\""
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "prettier": "^3.1.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
